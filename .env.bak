# Embedding Provider Configuration
# Choose between "mistral" or "openai"
EMBEDDING_PROVIDER=mistral

# Completion Provider Configuration
# Choose between "mistral" or "openai"
COMPLETION_PROVIDER=mistral

# Mistral Configuration
MISTRAL_API_KEY=
MISTRAL_ENDPOINT=https://api.mistral.ai/v1/embeddings
MISTRAL_EMBEDDING_MODEL=codestral-embed

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_ENDPOINT=https://api.openai.com/v1/embeddings
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Configuration RAG
# The config is working fine with this default value but you can fine tune it easily with this entry points

# can be updated dynamically without re-scanning the repos 
TOP_K=10

# After changing this ones you need to re-scan the repo to make it effective
CHUNK_SIZE=350
CHUNK_OVERLAP=100

# If you update this one you MUST re-scan your repos or the app will not work properly
VECTOR_DIMENSION=1536
